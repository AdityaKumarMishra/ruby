.filter_btm_space
  %h1 Listing Online Mock Exam

  %h4 Filter Online Mock Exams
  .panel.panel-default
    .panel-body
      = form_for_filterrific @filterrific do |f|
        .form-group
          %label Type
          =f.select(:by_product_line, @filterrific.select_options[:by_product_line],{ include_blank: '- All -' }, class: 'form-control')
        .form-group
          =f.text_field(:search_by_title_mock, class: 'filterrific-periodically-observed form-control', placeholder: 'Search for...')
        = link_to 'Reset filters', reset_filterrific_url, class: 'btn btn-default'

  = link_to 'New Online Mock Exam', new_online_mock_exam_path , class: 'btn btn-gradready green'
  = link_to 'Active Online Mock Exams',online_mock_exams_path , class: 'btn btn-gradready btn btn-primary'
  %br
  %br
  #filterrific_results
    =render(partial: 'online_mock_exams/index', locals: { online_mock_exams: @online_mock_exams })
