!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    :css
      *{
      padding: 0px;
      margin: 0px;
      }
  %body
    .wrapper{style: "padding: 30px 0px; font-family:arial"}
      %table{style: "margin: 0 auto;max-width: 677px;width: 100%; font-family:arial;margin-top: 50px;padding: 12px 12px;"}
        %tbody
          %tr
            %td{style: "margin-top: 1px; float: left; color: #FFF; margin-bottom: 40px; font-size: 15px; padding: 5px 14px; font-weight: 600; background: #007833;"}
              - if @rate.rateable_type == "Mcq"
                = "#{@id} in #{sanitize @mcq_stem.title} has been rated #{@rating}. Please investigate."
              - else
                = "#{@id} in #{sanitize @rate.rateable.title} has been rated #{@rating}. Please investigate."
          %tr
            %td{style: "margin-top: 10px; float: left; line-height: 25px; font-size: 15px;"}
              Hi,
          %tr
            %td{style: "margin-top: 10px; float: left; line-height: 25px; font-size: 15px;"}
              = "#{@current_user.full_name} low marked on:"
              - if @rate.rateable_type == "Vod"
                Title:
                = sanitize @rate.rateable.title
              - else
                Question:
                = @question_name
          %tr
            %td{style: "margin-top: 10px; float: left; line-height: 25px; font-size: 15px;"}
              - if @rate.description.present?
                Feedback:
                = sanitize @rate.description
              -else
                No feedback provided.
          %tr
            %td{style: "margin-top: 10px; float: left; line-height: 25px; font-size: 15px; margin-bottom: 60px;"}
              = link_to 'Edit', @rate.rateable_type == "Mcq" ? edit_mcq_stem_mcq_url(@mcq_stem, @rate.rateable) : edit_vod_url(@id), style: " padding: 5px 20px;color: #ffffff;text-align: center;  display: inline-block;background-color: #009348;border-radius: 5px;border-color: #00813f;border-width: 1px;border-style: solid;text-decoration: none;font-size: 15px;", target: "_blank"
          %tr
            %td{style: "margin-bottom: 24px; float: left;font-size: 15px;"}
              Kind regards,
          %tr
            %td{style: "margin-bottom: 34px; float: left;font-size: 15px;"}
              GradReady Student Success Team
