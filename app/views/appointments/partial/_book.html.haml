#makeAppointmentModal.modal-input-edit.modal.latest_pop.fade{:role => "dialog"}
  .modal-dialog.modal-lg{:role => "document"}
    .modal-content
      = simple_form_for(@appointment, html: {class: 'new_appointment_form'}) do |f|
        .modal-header
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
          %h4.modal-title Make Appointment
        .modal-body
          = f.hidden_field :student_id, value: @student_id
          = f.hidden_field :tutor_id, value: @tutor_id
          = f.hidden_field :hours, value: 0
          = f.hidden_field :course_id, value: @course_id
          = f.input :content, as: :ckeditor, input_html: { ckeditor: { height: 300 }, class:"ticket_question"}, required: true
        .modal-footer
          = f.button :submit, 'Continue', class: 'btn btn-default btn-danger', id: 'btn_assessment'
          %button.btn.btn-default.btn-success{"data-dismiss" => "modal", :type => "button"} Cancel


