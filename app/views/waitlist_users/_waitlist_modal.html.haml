%script{:src => "//ajax.aspnetcdn.com/ajax/jquery.validate/1.9/jquery.validate.min.js"}
#waitlist-modal.modal-input-new.modal.latest_pop.fade{:role => "dialog"}
  .modal-dialog.modal-lg{:role => "document"}
    .modal-content
      = simple_form_for(@waitlist_user, html: {class: 'waitlist_user_form' }) do |f|
        .modal-header
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
          %h4.modal-title.mod-title New Waitlist
        %hr
        .modal-body.text-align-left
          = f.input :name, required: true
          = f.input :email, required: true
          = f.input :course_id, as: :hidden, input_html: { value: params[:course_id]}
        .modal-footer
          = f.button :submit,'Create Waitlist', class: 'btn btn-success'

