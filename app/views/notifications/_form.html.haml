= simple_form_for(@notifications) do |f|
  .form-group
    = f.input :title, class: "form-control"
  .form-group
    %label Type
    = f.select :page_type, options_for_select((Notification.page_types.keys.map{|ct| [ct.gsub("_", " ").titleize, ct.to_sym]}),(@notifications.page_type)),{}, class: "form-control" 
  .form-group
    = f.input :description, label: "Description", as: :ckeditor, :input_html => { :ckeditor => { :height => 300 } }
  .form-check
    = f.check_box :active, class: "form-check-input"
    = f.label :active, class: "form-check-label"
  .form-actions
    = f.button :submit, "Submit"