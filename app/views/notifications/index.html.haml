%h1 Listing Notifications

#filterrific_results
  %table.gr-table.gr-table-bordered.table-hover
    %thead
      %tr
        %th
          Title
        %th
          Description
        %th
          Active
        %th
          Page
        %th
          Actions
    - @notifications.each do |notification|
      %tbody
        %tr
          %td
            = notification.title
          %td
            = notification.description.html_safe
          %td
            = notification.active ? "YES" : "NO"

          %td
            = notification.page_type.titleize
          %td
            = link_to "Edit", edit_notification_path(notification), class: "btn btn-info btn-sm"
/ .btn.btn-gradready.green.mtop10
/   =link_to "Add Notifications" , new_notification_path , style:"all:unset;"
