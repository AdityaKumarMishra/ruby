.panel.panel-default
  .panel-heading
    %h3.panel-title
      %p
        %b Question
      %p= essay.question
      %p
        %b Answer
      %p= essay.response.response
      = simple_form_for EssayTutorResponse.new, :url => essay_collect_student_answer_path  do |f|
        =f.input :response, :label => false
        =f.input :rating, :as => :select, :collection => (1..5)
        =f.input :essay_response_id, :as => :hidden, :input_html => { :value => essay.response.id }
        .btn-group
          = f.button :submit, class: 'btn btn-primary'
