%h1 Discount Code

%dl.dl-horizontal
  %dt Name
  %dd= @promo.name

  %dt Code
  %dd= link_to @promo.token, user_promo_link_url(token: @promo.token)

  %dt Amount
  %dd
    = number_to_percentage @promo.amount, precision: 0
    off

  %dt Can be combined
  %dd= @promo.stackable? ? "yes" : "no"

  %dt Applies to
  %dd
    - if @promo.product_version_id.present?
      = ProductVersion.find(@promo.product_version_id).pv_detail
    - else
      = @promo.purchaseable || "any product"

  %dt Generated by
  %dd= @promo.user

  %dt Created at
  %dd= @promo.created_at.in_time_zone("Australia/Melbourne").strftime('%d %b %Y %I:%M %p %Z ').to_s

  %dt Order Started
  %dd
    = pluralize @promo.orders.count, "time"

  %dt Order Completed
  %dd
    = pluralize @promo.purchase_count, "time"

  %dt Clicked discount link
  %dd
    = pluralize @promo.visit_count, "time"

  %dt Can be used
  %dd
    = pluralize @promo.used_times, "time"

  %dt Valid upto
  %dd
    = format_date_long @promo.expiry_date


= link_to 'Edit', edit_promo_path(@promo), class: "btn btn-success"
= link_to "Delete", @promo, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' }
