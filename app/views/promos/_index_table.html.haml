#filterrific_results.row.col-sm-12.filter_btm_space
  = will_paginate promos, renderer: BootstrapPagination::Rails
  %table.table.table-striped.table-bordered
    %thead
      %tr
        %th Name
        %th Code
        %th Generated by
        %th.wdth_18 Creation Date
        %th.wdth_15 Expiry Date
        %th.wdth_15 Can be used
        %th
    %tbody
      - promos.each do |promo|
        %tr
          %td= promo.name
          %td= promo.token
          %td= promo.user
          %td= promo.created_at.in_time_zone("Australia/Melbourne").strftime('%d %b %Y %I:%M %p %Z ').to_s
          %td= format_date_long promo.expiry_date
          %td= promo.used_times
          %td
            = link_to "Edit", edit_promo_path(promo), class: "btn btn-xs btn-success"
            = link_to "Delete", promo, class: "btn btn-xs btn-danger", method: :delete, data: { confirm: 'Are you sure?' }
