- title "Login | GradReady"
- meta_description "Login to your GradReady GAMSAT or UCAT course and take advantage of the Most Advanced Learning Technology on the Market. Join over 6000 of our GAMSAT students and see how our personal approach to preparation has made the difference year after year."

= render 'sign_up_modal'
.sliding-background
  .banner_middle.login_page
    .container
      .ovrlay_bg
        .mob_btn
          .mob_register_col.mob_login_col
            %p Already Have an Account?
            %a.frm_btn.register_btn{:href => "javascript:void(0)"} Login
          .mob_register_col
            %p Forgot Your Password?
            %a.frm_btn.register_btn{:href => "javascript:void(0)"} Forgot Password
        .forgot_col.login_col.mob_hide
          %p Already Have an Account?
          %a.frm_btn.register_btn.login_btn_slide{:href => "javascript:void(0)"} Login
        .forgot_col.mob_hide.new_heading
          %h1 Start your Prep Today
          = link_to "Sign Up", "#signup_modal", class: 'frm_btn register_btn', 'data-toggle' => 'modal', 'data-target'=> '#signup_modal'
          / %a.frm_btn.register_btn{:href => "/gamsat-preparation-courses#sign_up"} Sign Up
          %br
          %br
          %br
          %p Forgot Your Password?
          %a.frm_btn.register_btn.forgot_btn_slide{:href => "javascript:void(0)"} Forgot Password
        .login_form.fr_zindex.login_slide_wrap
          %h3 Login
          .field_col
            = simple_form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-horizontal') do |f|
              = display_errors resource
              .form-group
                = f.input :email, required: false, autofocus: true, input_html: { class: 'login_input' }
              .form-group
                = f.input :password, required: false, input_html: {class: 'login_input' }
              .btn_grp
                .checkbox_col.login_chkbox
                  %input#user_remember_me.custom-pvpf-checkbox{name:  "user[remember_me]", type: "checkbox"}/
                  %label{:for => "user_remember_me"}
                    %span
                      Remember me
                = f.button :submit, "Login", class: 'frm_btn'

              .form-group.btn_grp
                -if request.variant == [:phone]
                  = link_to "Didn't receive confirmation email?", "javascript:void(0)", class: 'forget_lnk mob_resend_form'
                  = link_to "Forgot password?", "javascript:void(0)", class: 'forget_lnk mob_forgot_form '
                -else
                  %a.forget_lnk.resend_btn_slide{:href => "javascript:void(0)"} Didn't receive confirmation email?
        .login_form.reset_password.resend_slide_wrap
          %h3 Resend Confirmation Email
          %p Enter your registered email address below, and we'll resend confirmation email.
          .field_col
            = simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), class: 'form-horizontal', html: { method: :post }) do |f|
              .form-group
                = f.input :email, required: true, autofocus: true, input_html: {class: 'login_input', id: 'resend_pwd' }
              .btn_grp.reset_pass
                = f.button :submit, "Resend", class: 'frm_btn'
              .form-group.btn_grp.mtopzero_mob
                -if request.variant == [:phone]
                  = link_to "Login", "javascript:void(0)", class: 'forget_lnk mob_login_form '
                  = link_to "Forgot password?", "javascript:void(0)", class: 'forget_lnk mob_forgot_form '
        .login_form.register_form.forgot_pass_slide_wrap
          %h3 Forgot Password
          %p Enter your email address below, and we'll send instructions for setting a new one.
          .field_col
            = simple_form_for(resource, as: resource_name, url: password_path(resource_name), class: 'form-horizontal', html: { method: :post }) do |f|
              .form-group
                = f.input :email, required: true, autofocus: true, input_html: {class: 'login_input', id: 'forgot_pwd' }
              .btn_grp.reset_pass
                = f.button :submit, "Reset Password", class: 'frm_btn'
              .form-group.btn_grp.mtopzero_mob
                -if request.variant == [:phone]
                  = link_to "Login", "javascript:void(0)", class: 'forget_lnk mob_login_form '
                  = link_to "Didn't receive confirmation email?", "javascript:void(0)", class: 'forget_lnk mob_resend_form'


:javascript

  $(document).ready(function(){
    $(".forgot_btn_slide").click(function(){
        $(".login_form").css({"left": "370px"});
        $(".forgot_pass_slide_wrap").css({"z-index": "1"});
        $(".fr_zindex").css({"z-index": "0"});
    });

    $(".login_btn_slide").click(function(){
        $(".login_form").css({"left": "45px"});
        $(".fr_zindex").css({"z-index": "1"});
        $(".forgot_pass_slide_wrap").css({"z-index": "0"});
        $(".resend_slide_wrap").css({"z-index": "0"});
    });

    $(".resend_btn_slide").click(function(){
        $(".login_form").css({"left": "370px"});
        $(".resend_slide_wrap").css({"z-index": "1"});
        $(".fr_zindex").css({"z-index": "0"});
    });

    $(".mob_forgot_form").click(function(){
        $(".fr_zindex").css({"left": "-120%"});
        $(".resend_slide_wrap").css({"left": "120%"});
        $(".forgot_pass_slide_wrap").css({"left": "0%"});
    });

    $(".mob_resend_form").click(function(){
       $(".fr_zindex").css({"left": "-120%"});
        $(".resend_slide_wrap").css({"left": "0"});
        $(".forgot_pass_slide_wrap").css({"left": "120%"});

    });

    $(".mob_login_form").click(function(){
        $(".fr_zindex").css({"left": "0"});
        $(".resend_slide_wrap").css({"left": "120%"});
        $(".forgot_pass_slide_wrap").css({"left": "120%"});


    });








  });
