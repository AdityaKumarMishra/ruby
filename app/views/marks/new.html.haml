.container
  .row
    = simple_form_for(@mark) do |f|
      .panel.panel-success
        .panel-heading
          %h1.panel-title
            %strong New Mark
        .panel-body
          .row
            .col-md-offset-1.col-md-10
              = f.error_notification
              .form-inputs
                .row
                  .col-md-6
                    = f.input :user_id, as: :hidden, input_html: { value: current_user.id }
                    = f.association :essay_response, collection: @essay_responses, label_method: :short_response
                    = f.association :mcq_student_answer, collection: @mcq_student_answer
                    = f.input :value
                    = f.input :correct, as: :boolean, checked_value: true, unchecked_value: false
        .panel-footer
          .btn-group
            = f.button :submit, class: 'btn btn-success cl-white'
            = link_to 'Back', marks_path, class: 'btn btn-default'
