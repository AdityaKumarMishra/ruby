        %div.price_inner
          = "$ #{product_info[product_versions[0]][price_label]}"
      %div.course_outer
        %div.course_inner
          ONLINE
        %p (Essentials)

  %li.col7
    %a{href: "#{root_url}#{dynamic_product_version_uri('custom', product_line, subject)}"}
      %div.custom_outer
        %div.custom_inner
          Custom
        %p

:css
  .modal_tablist.no_decoration{
    list-style:none;
    float:left;
    margin:0px;
    max-width: 600px;
    width:100%;
    padding:0px;
    text-align:center
  }

  .modal_tablist.no_decoration li{
    float:left;
    min-height: inherit;
    padding: 5px;
    position: relative !important;
    max-width:186px;
    width:100%;
    margin:0px 2px 2px 0px;

  }

  .modal_tablist.no_decoration li.col1{
    float:left; background-color: #30ffd3;background: -moz-linear-gradient(top, #0ae3b8 1%, #30ffd3 100%);background: -webkit-linear-gradient(top, #0ae3b8 1%,#30ffd3 100%);background: linear-gradient(to bottom, #0ae3b8 1%,#30ffd3 100%);filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#0ae3b8', endColorstr='#30ffd3',GradientType=0 );
  }

  .Object a{
    display: block;text-decoration: none;
  }

  .price_outer{
    margin: 4px 5px 0 0;text-align: right;
  }
  .price_inner{
    color: #fff;font-size: 16px;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }

  .course_outer{
    width: auto;text-align: center;float: left;margin: 76px 0 3px 3px;
  }

  .course_inner{
    color: #fff;font-size: 16px;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }

  .course_outer p{
    color: #fff;margin: 0px;font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;font-size: 12px;
  }

  .modal_tablist.no_decoration li.col2{
    background-color: #15ed70;background: -moz-linear-gradient(top, #18c762 1%, #15ed70 100%);background: -webkit-linear-gradient(top, #18c762 1%,#15ed70 100%);background: linear-gradient(to bottom, #18c762 1%,#15ed70 100%);filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#18c762', endColorstr='#15ed70',GradientType=0 );
