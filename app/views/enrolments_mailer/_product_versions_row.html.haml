- product_info = send(product_line+"_product_info")
- price_label = subject ? "price_#{subject}".to_sym : :price
%ul.modal_tablist.no_decoration
  %li.col1
    %a{href: "#{root_url}#{dynamic_product_version_uri('success-assured', product_line, subject)}"}
      %div.price_outer
        %div.price_inner
          = "$ #{product_info['success-assured'][price_label]}"
      %div.course_outer
        %div.course_inner
          SUCCESS ASSURED
        %p (Essentials)
  %li.col2
    %a{href: "#{root_url}#{dynamic_product_version_uri(product_versions[2], product_line, subject)}"}
      %div.price_outer
        %div.price_inner
          = "$ #{product_info[product_versions[2]][price_label]}"
      %div.course_outer
        %div.course_inner
          ATTENDANCE
        %p (Essentials)
  %li.col3
    %a{href: "#{root_url}#{dynamic_product_version_uri(product_versions[3], product_line, subject)}"}
      %div.price_outer
        %div.price_inner
          = "$ #{product_info[product_versions[3]][price_label]}"
      %div.course_outer
        %div.course_inner
          ATTENDANCE
        %p (Comprehensive)
  %li.col4
    %a{href: "#{root_url}#{dynamic_product_version_uri(product_versions[4], product_line, subject)}"}
      %div.price_outer
        %div.price_inner
          = "$ #{product_info[product_versions[4]][price_label]}"
      %div.course_outer
        %div.course_inner
          ATTENDANCE
        -if (product_line == 'gamsat' || product_line == 'umat')
          %p (Complete Care)
        -else
          %p (Comprehensive + Private Tutoring)
  %li.col5
    %a{href: "#{root_url}#{dynamic_product_version_uri(product_versions[1], product_line, subject)}"}
      %div.price_outer
        %div.price_inner
          = "$ #{product_info[product_versions[1]][price_label]}"
