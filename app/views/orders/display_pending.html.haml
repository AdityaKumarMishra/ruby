%h1 Listing orders

.panel.panel-default
  .panel-body
    .form-group
      = form_for_filterrific @filterrific do |f|
        %p
          Search by Keyword
          = f.text_field :with_keyword, class: 'form-control', placeholder: 'Purchase Reference'

        %p
        = link_to 'Reset filters', reset_filterrific_url, class: 'btn btn-default'


= render :partial => 'orders/display_pending', locals: { orders: @orders }
