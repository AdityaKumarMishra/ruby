-if pv_type == 'gamsat'
  %section.middle_course_section
    .preparation_corse
      .container.text-center.refer_flex
        .corse_col.hvr-sweep-to-right.aos-item.aos-init.aos-animate.refer_contain{"data-aos" => "fade-up", "data-aos-duration" => "1400"}
          %a{href: faq_topic_path(type: 'gamsat-preparation-courses', topic: 'enrolment-and-payment', anchor: 'group-discount-available')}
            .percent_icon
            %p 15% discount if you enrol in groups of 3 or more
        - if defined?(new_course_type) then
          -if [2,3].include? new_course_type
            .corse_col.hvr-sweep-to-right.aos-item.aos-init.aos-animate.refer_contain{"data-aos" => "fade-up", "data-aos-duration" => "1400"}
