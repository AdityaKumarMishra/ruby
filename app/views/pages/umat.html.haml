:javascript

  $(document).ready(function(){
    $("#umat_tbl.attendance").hide();
    $("#inter_tbl.int_attendance").hide();
    $("#comp_tbl .at_other").hide();
    $("#comp_tbl .ol_other").hide();
    $('#online').prop("checked", true);

    $('.umat_courses').click(function(){
      var inputValue = $(this).attr("id");
      var targetBox = $("." + inputValue);
      $('#umat_tbl:not(targetBox)').hide();
      $(targetBox).show();
    });

    $(".add_mob_course").click(function(){
      $(this).find("i").toggleClass("fa-plus fa-minus");
    });

    $('.inter_course').click(function(){
      var inputValue = $(this).attr("id");
      var targetBox = $("." + inputValue);
      $('#inter_tbl:not(targetBox)').hide();
      $(targetBox).show();
    });

    $('#attendce_pack').click(function(){
      $('#at_grad').prop("checked", true);
      $("#comp_tbl .at_grad").show();
      $("#comp_tbl .at_other").hide();
    })

    $('#non_attendce_pack').click(function(){
      $('#ol_grad').prop("checked", true);
      $("#comp_tbl .ol_grad").show();
      $("#comp_tbl .ol_other").hide();
    })

    $('.at_comparison').click(function(){
      var inputValue = $(this).attr("id");
      var targetBox = $("span." + inputValue);
      $('span.tbl_col2:not(.inputValue)').hide();
      $(targetBox).show();
    });

    $('.ol_comparison').click(function(){
      var inputValue = $(this).attr("id");
      var targetBox = $("span." + inputValue);
      $('span.tbl_col2:not(.inputValue)').hide();
      $(targetBox).show();
    });

  });

  AOS.init({
    easing: "ease-in-out-sine"
  });

  $(".open_recommender").click(function(){
    $("#course-recommender .cr").addClass("cr--on")
  });

  $(document).ready(function(){

    $(".plus_circl").click(function(){
      $(".more_links_popup").delay(100).fadeToggle(300);
      $(".overlay_page").addClass("show");
    });

    $(".overlay_page").click(function(){
      $(".overlay_page").removeClass("show");
      $(".more_links_popup").hide();
    });


    $(".more_links_popup ul li").click(function() {
      $(".more_links_popup").hide();
      $(".overlay_page").removeClass("show");
    });

    $(document).ready(function() {
      $(".banner_inner_page h1 a").on("click", function( e ) {
        e.preventDefault();
        $("body, html").animate({
          scrollTop: $( $(this).attr('href') ).offset().top
        }, 600);
      });
    });
  });
