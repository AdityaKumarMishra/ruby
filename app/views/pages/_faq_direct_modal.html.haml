    color: #5c5c5c;
  }
  .btn_wrap_mdl{
    display: flex;
    justify-content: center;
    align-items: baseline;
  }
  .btn_wrap_mdl button{
    margin-right: 10px;
  }
  .btn_wrap_mdl .red_btn{
    color: #fff;
    background-image: linear-gradient(to bottom, #f80101 0%, #f80101 100%) !important;
  }
  .btn_wrap_mdl .red_btn:before{
    background-image: linear-gradient(to bottom, #f80101 0%, #f80101 100%) !important;
  }
  #faqDirect .modal-header{
    padding: 15px 15px 0 15px;
    border-bottom: 0;
  }
