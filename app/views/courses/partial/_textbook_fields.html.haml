.nested-fields.lesson-fields
  = f.hidden_field :for_downloadable_resource, value: true
  = f.hidden_field :for_timetable, value: true
  = f.hidden_field :user_id, value: current_user.id
  .cstm_file{ class: ('file_field_wdth' if f.object.title.present?) }
    = f.file_field :document,  class: "file_field"
    .txtbook_titl= f.object.title
    = link_to_remove_association "Remove", f, class: "btn btn-danger btn-xs remove_btn"