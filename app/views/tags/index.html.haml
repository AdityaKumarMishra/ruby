%h1 Listing tags
.panel.panel-default
  .panel-body
    = form_for_filterrific @filterrific do |f|
      .form-group
        %label Type
        =f.select(:by_product_line, @filterrific.select_options[:by_product_line],{ include_blank: 'All' }, class: 'form-control')
      = link_to 'Reset filters', reset_filterrific_url, class: 'btn btn-default'

- unless current_user.student?
  = link_to 'New Tag', new_tag_path, class: 'btn btn-gradready green'
%br
%br

=render(partial: 'tags/index', locals: { tags: @tags })
