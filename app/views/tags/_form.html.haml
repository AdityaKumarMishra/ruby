= simple_form_for(@tag) do |f|
  = f.error_notification
  .form-inputs
    = f.input :name
    = f.input :description
    = f.input :instruction, as: :ckeditor, input_html: { ckeditor: { height: 200 }}
    = f.input :is_public
    = f.input :parent_id, collection: Tag.order(:name).reject { |tag| tag == @tag }, as: :select, label_method: :name  ,input_html: {class: 'chosen-select'}
  .form-actions
    = f.button :submit, "Create Tag"
