- options ||= {}

.modal.modal-input-edit.latest_pop.fade{role: "dialog", id: "comment_#{options[:answer].id}"}
  .modal-dialog.modal-lg{:role => "document"}
    .modal-content
      = simple_form_for(options[:answer].comments.build) do |f|
        .modal-header
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
          %h4.modal-title New Comment
        .modal-body
          = f.error_notification
          .form-inputs
            = f.input :content, as: :ckeditor, input_html: { id: "comment_#{options[:answer].id}_content", ckeditor: { height: 400 }, required: true }
            = f.input :commentable_type, as: :hidden
            = f.input :commentable_id, as: :hidden
        .modal-footer
          = f.button :submit, class: 'default_btn hvr-shutter-in-horizontal'
